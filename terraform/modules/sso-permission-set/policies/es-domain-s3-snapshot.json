{
  "Version": "2012-10-17",
  "Statement": [
      {
        "Sid": "AllowPassRole",
        "Effect": "Allow",
        "Action": [
          "iam:PassRole"
        ],
        "Resource": [
          "arn:aws:iam::${AccountId}:role/*${TeamCode}*"
        ]
      },
      {
        "Sid": "AllowWriteAccess",
        "Effect": "Allow",
        "Action": [
          "s3:PutObject*",
          "s3:GetObject*",
          "s3:DeleteObject",
          "s3:ListBucket"
        ],
        "Resource": [
          "arn:aws:s3:::*${TeamCode}*",
          "arn:aws:s3:::*${TeamCode}*/*"
        ]
      },
      {
          "Sid": "AllowPostToS3",
          "Effect": "Allow",
          "Action": "es:ESHttp*",
          "Resource": "arn:aws:es:*:${AccountId}:domain/*${TeamCode}*"
      },
      {
        "Sid": "AllowLocalKMS",
        "Effect": "Allow",
        "Action": [
          "kms:CreateGrant",
          "kms:Encrypt",
          "kms:Decrypt",
          "kms:Describe*",
          "kms:Get*",
          "kms:List*",
          "kms:ReEncrypt*",
          "kms:GenerateDataKey*"
        ],
        "Resource": [
          "arn:aws:kms:*:${AccountId}:key/*"
        ]
      }
  ]
}